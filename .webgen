#!/usr/bin/env bash

WBST="$HOME/git/gavales.github.io"
DMN="https://gavales.github.io"

PNDCMD="pandoc -F pandoc-crossref -s --toc -o"
ROOT="file://$WBST"
RTLC="${ROOT}/local"

cd $WBST

for i in $(ls views); do
	pandoc views/$i -o ${i%.*}.html --template template.html
done

for i in $(ls *.html); do
	sed -i 's;<section;<div;g' "$i"
	sed -i 's;</section;</div;g' "$i"
done

