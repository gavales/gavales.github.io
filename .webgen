#!/usr/bin/env bash

WBST="$HOME/git/gavales.github.io"
DMN="https://gavales.github.io"

PNDCMD="pandoc -F pandoc-crossref -s --toc -o"
ROOT="file://$WBST"
RTLC="${ROOT}/local"

cd $WBST

date
for i in $(ls views); do
	if [[ $i =~ "template.html" ]]; then continue
	fi
	[[ $i != "index.html" ]] && TOC="--table-of-contents --toc-depth=1"
	echo "     converting $i"
	pandoc views/$i -f gfm --template template.html $TOC -s -o ${i%.*}.html
done

for i in $(ls *.html); do
	if [[ $i =~ "template.html" ]]; then continue
	fi
	sed -i 's;<section;<div;g' "$i"
	sed -i 's;</section;</div;g' "$i"
done
